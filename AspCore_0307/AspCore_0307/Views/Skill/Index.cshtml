@using EntityLayer.Concrete
@model List<Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



<div class="card-header border-0">
    <h3 class="mb-0">Yetenek Tablo</h3>
    
</div>
<br />
<div class="d-flex justify-content-end mb-3">
    <a href="/Skill/AddSkill/" class="btn btn-success">Yetenek Ekle</a>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Başlık</th>
                <th scope="col" class="sort" data-sort="oran">Oran</th>
                <th scope="col" class="sort" data-sort="durum">Durum</th>
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Güncelle</th>
                <th scope="col"></th>
            </tr>
           
        </thead>
       
        <tbody class="list">
           
            
                @foreach (var item in Model)
                {
                <tr>
                    <th>
                       @Html.HiddenFor(x=>item.SkillId)
                    </th>
                    <td class="budget">
                        @item.Title
                    </td>
                    <td>
                        <div class="progress">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @item.Value%" aria- valuenow="50" aria-valuemin="0" aria-valuemax="@item.Value">@item.Value</div>
                        </div>
                    </td>
                    <td class="budget">
                        @if (@item.Status)
                        {
                            <p class="text-success">Aktif</p>
                        
                            

                        }
                        else
                        {
                            <p class="text-danger">Pasif</p>
                           
                        }
                    </td>
                    <td><a href="/Skill/RemoveSkill/@item.SkillId" class="btn btn-outline-warning " onclick="return confirm('Bu yeteneği silmek istediğinize emin misiniz?')"><i class="mdi mdi-folder-remove"></i></a></td>
                    <td><a href="/Skill/UpdateSkill/@item.SkillId" class="btn btn-info">Güncelle</a></td>
                </tr>
                }
            
                
        </tbody>
    </table>
 
   
</div>

