@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminMessageSend";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="container mt-5 border border-dark py-3">
<form class="forms-sample" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label >Konu</label>
            @Html.TextBoxFor(x=>x.Subject,new{@class="form-control"})
        </div>
        <div class="form-group col-md-6">
            <label >Alıcı</label>
            @Html.TextBoxFor(x=>x.Receiver,new{@class="form-control"})
        </div>
    </div>
    <div class="form-group">
        <label for="inputAddress">Message</label>
        @Html.TextAreaFor(x=>x.MessageContent,8,2,new{@class="form-control"})
    </div>
    <div class="d-flex justify-content-end">
    <button type="submit" class="btn btn-outline-success ">Gönder</button>
        </div>
</form>
</div>
