@model EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "ContactDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title"> İletişim Detay Sayfası</h4>

        <form class="forms-sample">
            <div class="form-group">
                @Html.HiddenFor(x=>x.MessageId)

                <label>İsim</label>
                @Html.TextBoxFor(x=>x.Name,new { @class = "form-control" } )
            </div>
            <div class="form-group">
                <label>Tarih</label>
                <div class="input-group ">
                    @Html.TextBoxFor(model => model.Date, "{0:dd/MM/yyyy HH:mm}", new  {  @class = "form-control col-sm-10" })

                </div>
            </div>
            <div class="form-group">
                <label>Mail</label>
                @Html.TextBoxFor(x=>x.Mail,new { @class = "form-control" } )
            </div>

            <div class="form-group">
                <label>Açıklama</label>
                @Html.TextAreaFor(x=>x.Content,10,2,new { @class = "form-control" } )
            </div>
            <a asp-action="Index" type="submit" class="btn btn-primary mr-2">İletişim Sayfası</a>

        </form>
    </div>
</div>

