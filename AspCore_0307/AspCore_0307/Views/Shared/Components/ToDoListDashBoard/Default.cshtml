@using EntityLayer.Concrete
@model List<ToDoList>

<div class="col-md-12 col-xl-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yapılacaklar Listesi</h4>
            <form method="post" action="/Dashboard/AddToDoList">
                <div class="add-items d-flex">
                    <input type="text" class="form-control todo-list-input" name="newItem" placeholder="bir şeyler yazın..">
                    <button class="add btn btn-primary todo-list-add-btn">Ekle</button>
                </div>
            </form>
            <div class="list-wrapper">
                <ul class="d-flex flex-column-reverse text-white todo-list todo-list-custom">
                    @foreach (var item in Model)
                    {
                        <li>
                            <div class="form-check form-check-primary">
                                <label class="form-check-label">
                                    <input class="checkbox" type="checkbox"> @item.Content
                                </label>
                            </div>
                            <form method="post" action="/Dashboard/RemoveToDoList">
                            <i class="remove mdi mdi-close-box"></i>
                            </form>
                        </li>
                    }
           
                </ul>
           
            </div>
        </div>
    </div>
</div>