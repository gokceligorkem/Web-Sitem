@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateExperience", "Experience", FormMethod.Post))
{
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> Deneyim Güncelleme Paneli</h4>

            <form class="forms-sample">
                <div class="form-group">
                    @Html.HiddenFor(x=>x.ExperienceId)
               
                    <label>Başık</label>
                    @Html.TextBoxFor(x=>x.Name,new { @class = "form-control" } )
                </div>
                <div class="form-group">
                    <label>Tarih</label>
                    <div class="input-group ">
                        @Html.TextBoxFor(model => model.Date, "{0:dd/MM/yyyy HH:mm}", new  { type = "date", @class = "form-control col-sm-10" })


                    </div>
                </div>
                <div class="form-group">
                    <label>Görsel Url</label>
                    @Html.TextBoxFor(x=>x.ImgUrl,new { @class = "form-control" } )
                </div>



                <div class="form-group">
                    <label>Açıklama</label>
                    @Html.TextAreaFor(x=>x.Description,10,2,new { @class = "form-control" } )
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>

            </form>
        </div>
    </div>
}

