@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
@{
    string color = "";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Tablosu</h4> 
       
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Tarih</th>
                            <th>Konu</th>
                            <th>Detay</th>
                        </tr>
                    </thead>
                    <tbody>@foreach (var item in Model)
                        {
                            @if (item.Status=="TAMAMLANDI")
                            {
                                color = "badge badge-success";
                            }
                            @if (item.Status == "DEVAM EDİYOR")
                            {
                                color = "badge badge-warning";
                            }
                            @if (item.Status == "YENİ")
                            {
                                color = "badge badge-danger";
                            }
                            <tr>
                            <td></td>
                            <td>@item.Title</td>
                                <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                            <td><label class="@color">@item.Status</label></td>
                                <td><a href="/Writer/Default/AnnouncementDetails/@item.ID" class="btn btn-outline-info">Detay Görüntüle</a></td>
                        </tr>
                        }
                    
                      
                      
                      
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

