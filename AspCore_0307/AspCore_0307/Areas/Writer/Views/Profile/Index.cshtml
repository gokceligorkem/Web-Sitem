@model AspCore_0307.Areas.Writer.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profile Bilgileri</h4>
            
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Adınız</label>
                    <input type="text" class="form-control" asp-for="Name"  id="exampleInputName1" placeholder="Ad">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Soyadınız</label>
                    <input type="text" class="form-control" asp-for="Surname" id="exampleInputName1" placeholder="Soyad">
                </div>
                <div class="form-group">
                    <label>Resim Seç</label>
                    <input type="file" asp-for="Picture" >
                
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Parola</label>
                    <input type="password" class="form-control" asp-for="Password" id="exampleInputPassword4" placeholder="Şifreniz" required>
                    @Html.ValidationMessageFor(x=>x.Password)
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Parola Tekrar</label>
                    <input type="password" class="form-control" asp-for="PasswordConfirm" id="exampleInputPassword4" required placeholder="Şifre Tekrar">
                    @Html.ValidationMessageFor(x=>x.PasswordConfirm)
                </div>
                <hr />
               @* <h3>Referans Ol</h3>
                <hr />
                <div class="form-group">
                    <label>İşiniz</label>
                    <input type="text" asp-for="Job" class="form-control" />

                </div>
                <div class="form-group">
                    <label>Mesajınız</label>
                    <input type="text" asp-for="Content" class="form-control" />

                </div>*@
               
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-success mr-2">Güncelle</button>
                    <button class="btn btn-outline-warning">İptal</button>
                </div>
            </form>
        </div>
    </div>
</div>

